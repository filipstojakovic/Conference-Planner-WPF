                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
        <Grid HorizontalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="DodgerBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Transparent">
                <Image Source="/resources/images/calendar-icon.png" />
            </Grid>

            <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch"
                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel>
					<ListView x:Name="Drawer_MenuListView"
                              Background="{x:Null}"
                              BorderThickness="0"
                              ItemsSource="{Binding Path=ItemMenu, Mode=TwoWay}"
                              Foreground="White"
                              Margin="0,10,0,0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionChanged="Drawer_MenuListView_MouseLeftButtonUp">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource MyListViewItem}" />
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <!--Every card menu item-->
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="{Binding Path=Icon}" Width="20" Height="20"
                                                             VerticalAlignment="Center"
                                                             Margin="10 0" Foreground="White" />
                                    <TextBlock Text="{Binding Path=Header}" VerticalAlignment="Stretch" Padding="5 5"
                                               FontSize="18" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>


			<StackPanel Grid.Row="2" Margin="0,10,0,10">
                <!--SETTINGS button-->
				<ListView x:Name="DrawerBottom_MenuListView"
                          Background="{x:Null}" BorderThickness="0"
                          ItemsSource="{Binding Path=ItemMenu, Mode=TwoWay}"
                          Foreground="White"
                          MouseLeftButtonUp="DrawerBottom_MenuListView_MouseLeftButtonUp">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MyListViewItem}" />
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="{Binding Path=Icon}" VerticalAlignment="Center"
                                                         Width="20" Height="20" Margin="10 0" />
                                <TextBlock Text="{Binding Path=Header}" VerticalAlignment="Center" Padding="5 5"
                                           FontSize="18" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--LOGOUT BUTTON-->
                <ListView
                    MouseLeftButtonUp="DrawerBottom_MenuListView_MouseLeftButtonUp"
                    BorderThickness="0"
                    Foreground="White"
                    Background="{x:Null}"
                    >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MyListViewItem}" />
                    </ListView.ItemContainerStyle>

                    <ListViewItem VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Logout" VerticalAlignment="Center" Width="20" Height="20"
                                                     Margin="10 0" />
                            <TextBlock Text="{hm:Lang logout}" VerticalAlignment="Center" Padding="5 5" FontSize="18" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>


        </Grid>
        <DockPanel x:Name="DockPanelMain" Margin="10" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" />
    </Grid>
</Window>