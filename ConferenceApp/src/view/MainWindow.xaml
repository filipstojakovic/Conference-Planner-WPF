        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:ColorZone Padding="10" Background="DodgerBlue" Foreground="White" Mode="PrimaryMid"
                                  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid>
                <TextBlock x:Name="HeaderBar" VerticalAlignment="Center" Padding="5 3" FontSize="20" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock x:Name="HeaderUserText" VerticalAlignment="Center" Padding="5 3" FontSize="20" />
