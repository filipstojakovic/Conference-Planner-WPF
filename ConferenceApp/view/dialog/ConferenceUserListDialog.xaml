<Window x:Class="ConferenceApp.view.dialog.ConferenceUserListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ConferenceApp.view.dialog"
        mc:Ignorable="d"
        Title="ConferenceUserListDialog" 
        Width="600"
        SizeToContent="Height"
        MinHeight="500"
        MaxHeight="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="Conferece name:" />
        <TextBox Grid.Row="0" Grid.Column="1"
                 Margin="5"
                 IsReadOnly="True"
                 Name="ConferenceName" />

        <Label Grid.Row="1" Grid.Column="0" Margin="5" Content="Organizer:" />
        <TextBox Grid.Row="1" Grid.Column="1"
                 Margin="5"
                 IsReadOnly="True"
                 Name="OrganizerName" />
        <Label Grid.Row="2" Grid.Column="0" Margin="5" Content="Moderator:" />
        <TextBox Grid.Row="2" Grid.Column="1"
                 Margin="5"
                 IsReadOnly="True"
                 Name="ModeratorName" />

        <DataGrid Name="conferenceDataGrid"
                  Margin="0,5"
                  Grid.Row="3" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"
                  VerticalScrollBarVisibility="Auto"
                  ItemsSource="{Binding Visitors}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First name" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Last name" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>